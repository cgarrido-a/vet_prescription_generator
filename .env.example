# Application Configuration
NODE_ENV=development
PORT=3000
APP_NAME=Receta Veterinaria
VERSION=1.0.0

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/receta_veterinaria
DB_HOST=localhost
DB_PORT=5432
DB_NAME=receta_veterinaria
DB_USER=your_username
DB_PASSWORD=your_password
DB_SSL=false

# Security
JWT_SECRET=your_super_secure_jwt_secret_here_min_32_chars
BCRYPT_ROUNDS=12

# CORS Origins (comma separated for multiple)
CORS_ORIGINS=http://localhost:3000,https://your-app.onrender.com

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload (if needed later)
MAX_FILE_SIZE=10485760

# Email Configuration (for future features)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@veterinaria.com